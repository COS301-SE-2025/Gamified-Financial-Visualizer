{
  "dependencies": {
    "@types/axios": "^0.9.36",
    "@types/winston": "^2.4.4",
    "argon2": "^0.43.0",
    "axios": "^1.9.0",
    "bullmq": "^5.53.1",
    "classnames": "^2.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "framer-motion": "^12.18.1",
    "helmet": "^8.1.0",
    "node-cron": "^4.0.5",
    "paseto": "^3.1.4",
    "pg": "^8.16.0",
    "react-confetti": "^6.4.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "redis": "^5.5.6",
    "socket.io-client": "^4.8.1",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0"
  },
  "scripts": {
    "format": "prettier . --write",
    "dev": "concurrently \"redis-server\" \"npx ts-node api-backend/server.ts\" \"npm start --prefix frontend\"",
    "test": "jest --setupFilesAfterEnv=./api-backend/tests/jest-setup.ts",
    "test:int": "jest integration --setupFilesAfterEnv=./api-backend/tests/jest-setup.ts",
    "test:services": "jest services --setupFilesAfterEnv=./api-backend/tests/jest-setup.ts",
    "test:watch": "jest --watch --setupFilesAfterEnv=./api-backend/tests/jest-setup.ts",
    "test:cov": "jest --coverage --setupFilesAfterEnv=./api-backend/tests/jest-setup.ts",
    "build": "npm run build --workspace=frontend"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/api-backend/tests"
    ],
    "testMatch": [
      "**/integration/**/*.test.ts",
      "**/services/**/*.test.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^@/(.*)$": "<rootDir>/api-backend/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "api-backend/tsconfig.json"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/express-validator": "^3.0.2",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.4",
    "@types/redis": "^4.0.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "redis-mock": "^0.56.3",
    "supertest": "^7.1.1",
    "tailwindcss": "^4.1.7",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "type": "commonjs",
  "name": "gfv-dev",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "api-backend/modules/*"
  ]
}
