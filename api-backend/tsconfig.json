// /gamified-finance-api/tsconfig.json
{
   "extends": "../tsconfig.json",
   "compilerOptions": {
       "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
     "rootDir": "./services", 
    // Removed "rootDir" to allow sources from multiple service folders
    "baseUrl": ".", 
   },
   "include": [
       "src/**/*.ts",
      "./services/transaction-service/src",
      "./services/auth-services/src",
      "./services/goal-service/src",
   ],
}